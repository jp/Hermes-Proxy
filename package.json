{
  "name": "hermes-proxy",
  "version": "1.0.0",
  "description": "Hermes Proxy desktop app",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm:electron:watch\" \"wait-on http://localhost:5174 && wait-on electron/dist/main.js && electron .\"",
    "vite": "vite",
    "build": "vite build && npm run electron:build",
    "dist": "npm run build && electron-builder",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "npm run electron:build && electron .",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:watch": "tsc -p electron/tsconfig.json -w",
    "bridge:build": "tsc -p packages/mcp-bridge/tsconfig.json",
    "bridge": "npm run bridge:build && node packages/mcp-bridge/dist/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "http-mitm-proxy": "^1.1.0",
    "node-forge": "^1.3.3",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.7",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.0.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0",
    "jsdom": "^26.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.hermes.proxy",
    "productName": "Hermes Proxy",
    "npmRebuild": false,
    "icon": "src/images/icon.png",
    "files": [
      "dist/**",
      "electron/**",
      "src/images/icon.png",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "overrides": {
    "tar": "^7.5.4"
  }
}
