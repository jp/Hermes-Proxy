{
  "name": "hermes-proxy",
  "version": "1.0.0",
  "description": "Hermes Proxy desktop app",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "vite": "vite",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "start": "electron ."
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "http-mitm-proxy": "^1.1.0",
    "node-forge": "^1.3.3",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.0.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0",
    "vite": "^7.3.1",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.hermes.proxy",
    "productName": "Hermes Proxy",
    "npmRebuild": false,
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "overrides": {
    "tar": "^7.5.4"
  }
}
